<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar Perro</h1>

            <hr>

            <form action="/perros/editar/{{pet.id}}" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{pet.name}}">
                </div>
                <div class="mb-3">
                    <label for="birth" class="form-label">Fecha de nacimiento</label>
                    <input type="date" class="form-control" id="birth" name="birth" value="{{pet.birth}}">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Descripci√≥n</label>
                    <input type="text" class="form-control" id="description" name="description"
                        value="{{pet.description}}">
                </div>
                <div class="mb-3">
                    <label>
                        <input name="avatar" type="file">
                    </label>
            
                </div>
                <div class="mb-3">
                    <label for="cast" class="form-label">Seleccionar albergue</label>
                    <select name="cast" class="form-select">
                        {{#each pounds}}
                        <option value={{id}}>{{name}}</option>
                        {{/each}}

                    </select>
                </div>

                <button type="submit" class="btn btn-info">Editar</button>
                <a href="/" class="btn btn-dark">Home</a>

            </form>
        </div>
    </div>


</div>